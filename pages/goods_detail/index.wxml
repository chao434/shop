<view class="detail-swriper">
  <swiper autoplay="true" circular="{{true}}"indicator-dots="{{true}}">
    <swiper-item class="" 
                  item-id=""
                  wx:for="{{goodsDetail.pics}}"
                  wx:key="pics_id">
      <image class="" src="{{item.pics_mid}}" mode="widthFix"></image>
    </swiper-item>
  </swiper>
</view>

<view class="good-price">{{goodsDetail.goods_price}}</view>
<view class="good-name-row">
  <view class="good-name">{{goodsDetail.goods_name}}</view>
  <view class="good-collect">
    <text class="iconfont icon-shoucang"></text>
    <view class="shoucang">收藏</view>
  </view>
</view>
