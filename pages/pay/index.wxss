/* pages/cart/index.wxss */
page {
  padding-bottom: 90rpx;
}
.user-info-row {
  display: flex;
  padding: 20rpx;
}
.user-info-row .user-info {
  flex: 5;
}
.user-info-row .user-phone {
  flex: 3;
  text-align: right;
}
.cart-row .cart-title {
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-bottom: 1px solid currentColor;
  border-top: 1px solid currentColor;
}
.cart-row .cart-main .cart-item {
  display: flex;
  padding: 20rpx 10rpx;
  border-bottom: 1px solid #ccc;
}
.cart-row .cart-main .cart-item navigator {
  flex: 2;
}
.cart-row .cart-main .cart-item navigator image {
  width: 70%;
  height: 100%;
}
.cart-row .cart-main .cart-item .cart-detail-info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-arounds;
}
.cart-row .cart-main .cart-item .cart-detail-info .goods-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart-row .cart-main .cart-item .cart-detail-info .goods-price-item {
  display: flex;
  justify-content: space-between;
}
.cart-row .cart-main .cart-item .cart-detail-info .goods-price-item .goods-price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.footer-tool {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  border-top: 1px solid #ccc;
}
.footer-tool .footer-total-price {
  flex: 6;
  text-align: right;
  padding-right: 5rpx;
}
.footer-tool .footer-total-price .price-total .price-text {
  color: var(--themeColor);
  font-size: 34rpx;
}
.footer-tool .footer-pay {
  height: 100%;
  flex: 3;
  background-color: var(--themeColor);
  font-size: 38rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
